<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">


        <RelativeLayout
            android:id="@+id/view_foreground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="0dp">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/thumbnail"
                android:layout_toRightOf="@+id/thumbnail"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:hint="제품명"
                android:maxLines="1"
                android:textColor="@color/itemName"
                android:textSize="17sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/valid_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/thumbnail"
                android:text="@string/valid_txt_txt"
                android:textColor="@color/welcome_up_background"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/valid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginStart="90dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/thumbnail"
                android:hint="유통기한"
                android:textColor="@color/Description"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/price_stock_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/valid"
                android:layout_marginBottom="20sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/thumbnail"
                android:text="가격 / 개수"
                android:textColor="@color/welcome_up_background"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/price_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/valid"
                android:layout_marginBottom="20sp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/thumbnail"
                android:hint="가격 / 개수"
                android:textColor="@color/Description"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="27dp"
                android:layout_marginStart="170dp"
                android:layout_marginTop="45dp"
                android:layout_toEndOf="@+id/valid_txt" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>